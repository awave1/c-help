{
  "name": "c-help",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "build": "concurrently --kill-others \"npm run build:client\"",
    "build:client": "npm run build --prefix ./client",
    "dev": "concurrently --kill-others \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm start --prefix ./client",
    "dev:server": "npm run dev --prefix ./server",
    "prod": "NODE_ENV=production concurrently --kill-others \"npm run build:client\" \"npm run prod:server\"",
    "prod:server": "npm start --prefix ./client"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "husky": "^1.0.1",
    "lint-staged": "^7.3.0",
    "prettier": "^1.16.3",
    "prettier-eslint": "^8.8.2"
  }
}
